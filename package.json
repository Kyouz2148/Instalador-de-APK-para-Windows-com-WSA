{
  "name": "wsa-apk-installer",
  "version": "1.0.0",
  "description": "Aplicativo desktop para instalar APKs no Windows Subsystem for Android",
  "main": "electron-main.js",
  "homepage": "./",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "electron": "electron .",
    "electron-dev": "concurrently \"npm run dev\" \"wait-on http://localhost:3000 && electron .\"",
    "build": "electron-builder",
    "dist": "npm run build",
    "pack": "electron-builder --dir",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "build": {
    "appId": "com.alangodois.wsa-apk-installer",
    "productName": "WSA APK Installer",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!dist/**/*",
      "!node_modules/**/*",
      "node_modules/express/**/*",
      "node_modules/multer/**/*",
      "node_modules/cors/**/*",
      "node_modules/fs-extra/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico",
      "requestedExecutionLevel": "requireAdministrator"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "keywords": [
    "wsa",
    "android",
    "apk",
    "installer",
    "windows",
    "electron",
    "desktop"
  ],
  "author": "Alan Godois",
  "license": "MIT",
  "dependencies": {
    "child_process": "^1.0.2",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "fs-extra": "^11.1.1",
    "multer": "^1.4.5-lts.1",
    "path": "^0.12.7"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^27.3.11",
    "electron-builder": "^24.13.3",
    "nodemon": "^3.0.1",
    "wait-on": "^7.2.0"
  }
}
